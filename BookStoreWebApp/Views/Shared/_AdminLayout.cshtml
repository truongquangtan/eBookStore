@{
    var message = (string)TempData["Message"] ?? "";
    var isSuccess = (string)TempData["IsSuccess"] == null ? "false" : TempData["IsSuccess"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BStore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
    <link href="~/css/toast.css" rel="stylesheet" />
</head>
<!-- body -->
<body class="main-layout home_page" onload="onLoadedHook(`@message`, '@isSuccess','@User.Identity.Name')">
    <div class="notify z-[1000] flex items-center"><span id="notifyType" class="block ml-3"></span></div>
    <div class="w-full min-h-screen fixed font-sans text-gray-900 bg-gray-50 flex">
        <aside class="py-6 px-10 w-64 border-r border-gray-200">
            <div class="h-fit w-fit block flex items-center">
                <img src="~/images/book_logo.jpg" width="80" height="80" />
                <div class="text-xl font-bold">BStore</div>
            </div>
            <ul class="flex flex-col gap-y-6 pt-20">
                <li>
                    <a asp-action="Index" asp-controller="Product" class="flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group">
                        <span class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out">
                        </span>
                        <svg width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg"
                             class="w-6 h-6 fill-current">
                            <path opacity=".3"
                                  d="M14 9V8a2 2 0 1 0-4 0v1H8V8a4 4 0 1 1 8 0v1h-2Zm0 0V8a2 2 0 1 0-4 0v1H8V8a4 4 0 1 1 8 0v1h-2Z"
                                  fill="currentColor"></path>
                            <path fill-rule="evenodd" clip-rule="evenodd"
                                  d="M6.847 9h10.306a1 1 0 0 1 .986.836l1.473 8.835A2 2 0 0 1 17.639 21H6.361a2 2 0 0 1-1.973-2.329l1.473-8.835A1 1 0 0 1 6.847 9Z"
                                  fill="currentColor"></path>
                        </svg>
                        <span class="font-bold">Products</span>
                    </a>
                    <a asp-action="Index" asp-controller="Category" class="flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group">
                        <span class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out">
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-bar-chart-steps" viewBox="0 0 16 16">
                            <path d="M.5 0a.5.5 0 0 1 .5.5v15a.5.5 0 0 1-1 0V.5A.5.5 0 0 1 .5 0zM2 1.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-4a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-6a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1z" />
                        </svg>
                        <span>Categories</span>
                    </a>
                    <a asp-action="Index" asp-controller="OrderAdmin" class="flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group">
                        <span class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out">
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 48 48"><g fill="none" stroke="#000" stroke-width="4"><path stroke-linecap="round" stroke-linejoin="round" d="M42 24V9C42 7.34315 40.6569 6 39 6H9C7.34315 6 6 7.34315 6 9V39C6 40.6569 7.34315 42 9 42H24" /><circle cx="32" cy="32" r="6" fill="#2F88FF" /><path stroke-linecap="round" stroke-linejoin="round" d="M37 36L42 40" /><path stroke-linecap="round" stroke-linejoin="round" d="M14 16H34" /><path stroke-linecap="round" stroke-linejoin="round" d="M14 24L22 24" /></g></svg>
                        <span>Orders</span>
                    </a>
                </li>
                <li class="border-t-2">
                    <a asp-action="Logout" asp-controller="Account" class="flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group">
                        <span class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out">
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" class="w-6 h-6 fill-current" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                            <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>
        <main class="flex-1 pb-8">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-center pb-3">
            &copy; 2023 - BookStoreWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Javascript files-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.0.0.min.js"></script>
    <script src="~/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/toast.js"></script>
    <script src="~/js/cart-process.js"></script>
    <script src="~/js/admin_index/index.js"></script>
    <script src="~/js/admin_index/category.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
